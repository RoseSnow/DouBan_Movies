<!--index.wxml-->
<scroll-view bindscrolltolower="load">
    <view class="title">
    {{ title }}
    </view>
    <view id='item'>
    <view class='item' wx:for="{{ list }}">
        <view class="left">
            <image src="{{item.images.small}}"></image>
        </view>
        <view class="right">
            <view class="detail">
                <view >{{ item.title }}</view>
                <view >评分：<text style="color:red; font-size:23rpx">{{ item.rating.average }}</text></view>
                <view >导演：{{ item.directors[0].name }}</view>
                <view >主演：{{ item.casts[0].name}}/{{ item.casts[1].name}}/{{ item.casts[2].name}}</view>
                <view >类型：{{ item.genres[0] }}/{{ item.genres[1] }}</view>
                <view >影片时长：{{ item.durations[0]}}</view>
                <view >年份/发行地：{{item.pubdates[0]}}</view>
            </view>
        </view>
    </view>
    </view>
</scroll-view>